@using CraftHub.Infrastructure.Data.Models;
@model List<ProductServiceModel>

@{
    ViewBag.Title = "Shop Cart";
}

<!--Format Space-->
<h2 class="text-center">@ViewBag.Title</h2>
<hr />

 <!-- Cart Page Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Products</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Handle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">
                                <div class="d-flex align-items-center">
                                    <img src="@item.ImageUrl" class="img-fluid me-5 rounded-circle" style="width: 80px; height: 80px;" alt="">
                                </div>
                            </th>
                            <td>
                                <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id" asp-route-information="@item.GetInformation()" class="mb-0 mt-4">@item.Title</a>
                            </td>
                            <td>
                                <p class="mb-0 mt-4">@item.Price BGN</p>
                            </td>
                            <td>
                                <a asp-controller="Cart" asp-action="Remove" asp-route-id="@item.Id"  class="btn btn-md rounded-circle bg-light border mt-4"> <i class="fa fa-times text-danger"></i> </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="row g-4 justify-content-end">
            <div class="col-8"></div>
            <div class="col-sm-8 col-md-7 col-lg-6 col-xl-4">
                <div class="bg-light rounded">
                    <div class="p-4">
                        <h1 class="display-6 mb-4">Cart <span class="fw-normal">Total</span></h1>
                        <div class="d-flex justify-content-between mb-4">
                            <h5 class="mb-0 me-4">Subtotal:</h5>
                            <p class="mb-0">@Model.Select(p=>p.Price).Sum() BGN</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h5 class="mb-0 me-4">Shipping</h5>
                            <div class="">
                                <p class="mb-0">0.00 BGN</p>
                            </div>
                        </div>
                    </div>
                    <div class="py-4 mb-4 border-top border-bottom d-flex justify-content-between">
                        <h5 class="mb-0 ps-4 me-4">Total</h5>
                        <p class="mb-0 pe-4">@Model.Select(p=>p.Price).Sum() BGN</p>
                    </div>
                    <button class="btn border-secondary rounded-pill px-4 py-3 text-primary text-uppercase mb-4 ms-4" type="button">Proceed Checkout</button>
                   
                </div>
            </div>
        </div>
        <br />
         <br />
          <br />
        <div class="text-center">
             <a asp-controller="Product" asp-action="All" class="btn border-secondary rounded-pill px-4 py-3 text-primary text-uppercase mb-4 ms-4"> Go Back Shopping </a>
        </div>
       
        
    </div>
</div>
<!-- Cart Page End -->

<!-- Footer Start -->
