@model IEnumerable<ProductIndexServiceModel>

@{
	ViewData["Title"] = "Home Page";
	var products = Model.ToList();
}
@if (!ViewData.ModelState.IsValid && ViewData.ModelState["Error"] != null)
{
	<div class="alert alert-danger" role="alert">
		@ViewData.ModelState["Error"].Errors.First().ErrorMessage
	</div>

}

<!-- Best Products Start -->
<div class="container-fluid py-5 mb-5 hero-header">
	<div class="container py-5">
		<div class="row g-5 align-items-center">
			<div class="col-md-12 col-lg-7">
				<h4 class="mb-3 text-secondary">100% HandMade Products</h4>
				<h1 class="mb-5 display-3 text-primary">Products created with Love & Creativity</h1>
				<div class="position-relative mx-auto">
					@if (User?.Identity?.IsAuthenticated == false)
					{				
						<input class="form-control border-2 border-secondary w-75 py-3 px-4 rounded-pill" type="number" placeholder="Become part of our comunity">	
						<a class="btn btn-primary border-2 border-secondary py-3 px-4 position-absolute rounded-pill text-white h-100" style="top: 0; right: 25%;" asp-area="Identity" asp-page="/Account/Register">Register</a>
					}
				</div>
			</div>
			<div class="col-md-12 col-lg-5">
					<div id="carouselId" class="carousel slide position-relative" data-bs-ride="carousel">
						<div class="carousel-inner">
						@for (int i = 0; i < products.Count(); i++)
						{
							var product = products[i];
								<div class="carousel-item  @(i == 0 ? "active" : string.Empty) ">
									<img class="img-fluid w-100 h-100 bg-secondary rounded top-100"  src="@product.ImageUrl" alt="@product.Title">
								<a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" asp-route-information="@product.GetInformation()" class="btn px-4 py-2 text-white rounded">@product.Title</a>
								</div>
						}
						</div>
						<button class="carousel-control-prev" type="button" data-bs-target="#carouselId" data-bs-slide="prev">
							<span class="carousel-control-prev-icon" aria-hidden="true"></span>
							<span class="visually-hidden">Previous</span>
						</button>
						<button class="carousel-control-next" type="button" data-bs-target="#carouselId" data-bs-slide="next">
							<span class="carousel-control-next-icon" aria-hidden="true"></span>
							<span class="visually-hidden">Next</span>
						</button>
					</div>
			</div>
		</div>
	</div>
</div>
<!-- Best Products End -->

