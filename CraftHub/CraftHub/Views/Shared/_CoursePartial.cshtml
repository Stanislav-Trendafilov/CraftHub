            <h4>@Model.Title</h4>
            <h6>Description: <b>@Model.Details</b></h6>
            <h6>Duration: <b>@String.Format("{0:f2}", Model.Duration) BGN</b> </h6>
            @if (!this.User.Identity.IsAuthenticated)
