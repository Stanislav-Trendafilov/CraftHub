@model ProductServiceModel

<div class="col-md-4">
    <div class="card mb-3">

        <img class="card-img-top" src="@Model.ImageUrl" alt="Product Image">
        <div class="card-body text-center">
            <h4>@Model.Title</h4>
            <h6>Description: <b>@Model.Description</b></h6>
            <h6>  Price: <b>@String.Format("{0:f2}", Model.Price) BGN</b> </h6>
              @if (!this.User.Identity.IsAuthenticated)
            {
                <a asp-controller="House" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-success">Details</a>
                <a href="#" class="btn border border-secondary rounded-pill px-3 text-primary"><i class="fa fa-shopping-bag me-2 text-primary"></i> Add to cart</a>
            }
            @if (this.User.Identity.IsAuthenticated)
            {
                <a href="#" class="btn border border-secondary rounded-pill px-3 tex t-primary"><i class="fa fa-shopping-bag me-2 text-primary"></i> Add to cart</a>
                       <p></p>  
                <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-success">Details</a>
                <a asp-controller="House" asp-action="Edit" asp-route-id="@Model.Id"class="btn btn-warning">Edit</a>
                <a asp-controller="House" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                <p></p>
            }

        </div>
    </div>
</div>

